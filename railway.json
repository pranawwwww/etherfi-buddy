{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "backend/Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn main:app --bind 0.0.0.0:$PORT --workers 4 --worker-class uvicorn.workers.UvicornWorker --timeout 60",
    "restartPolicyMaxRetries": 5
  },
  "env": {
    "PYTHON_VERSION": "3.11"
  }
}
